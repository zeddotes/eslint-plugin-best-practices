{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "isolatedModules": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.test.ts",
    "src/rules/__tests__/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist/**/*",
    "**/*.d.ts",
  ]
}

